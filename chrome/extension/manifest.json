{
    "name": "TS",
    "manifest_version": 2,
    "icons": {
        "16": "img/icon.ico",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "version": "1.0.0",
    "description": "ts",
    "background": {
        "page": "background.html"
    },
    "options_page" : "options.html",
    "browser_action": {
        "default_icon": "img/icon128.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["build/js/content.dev.js"],
            "css": ["build/css/content.min.css"]
        }
    ],
    "web_accessible_resources":[
        "build/js/*.js.map",
        "build/js/content.dev.js"
    ],
    "permissions": [
        "contextMenus",
        "unlimitedStorage",
        "notifications",
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}
